<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ProductController">
   <children>
      <HBox layoutY="350.0" prefHeight="50.0" prefWidth="600.0">
         <children>
            <Button fx:id="btnSave" mnemonicParsing="false" onMouseClicked="#clickSave" text="Save">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" top="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="btnCancel" mnemonicParsing="false" onMouseClicked="#clickCancel" text="Cancel">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" top="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      <VBox fx:id="vbLabels" prefHeight="350.0" prefWidth="150.0">
         <children>
            <Label text="Booking ID:">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <Label text="Booking Date:">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Label>
         </children></VBox>
      <VBox fx:id="vbInputs" layoutX="150.0" prefHeight="350.0" prefWidth="450.0">
         <children>
            <TextField fx:id="tfProductId" disable="true" editable="false">
               <VBox.margin>
                  <Insets bottom="11.0" left="11.0" right="11.0" top="11.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="tfProdName">
               <VBox.margin>
                  <Insets bottom="11.0" left="11.0" right="11.0" top="11.0" />
               </VBox.margin>
            </TextField>
         </children></VBox>
   </children>
</AnchorPane>
